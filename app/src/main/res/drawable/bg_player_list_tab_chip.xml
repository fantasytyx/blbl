<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused + selected: overall (fill) highlight, blue only for focus ring. -->
    <item android:state_focused="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E61E1E1E" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4DFFFFFF" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/blbl_blue" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused: readable on bright video frames -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E61E1E1E" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/blbl_blue" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E61E1E1E" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4DFFFFFF" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#66FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E61E1E1E" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>

    <!-- Selected: highlight via fill; keep border same as default. -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E61E1E1E" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4DFFFFFF" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#66FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default: per-tab background (no shared container background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E61E1E1E" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>
</selector>
